        $dia = date('d');
        $data_base = date('Ym');
        $data_final = date('Ymd');

        if ($dia_parametro == 01) {
            $data_meta = $data_base;

            $data_init = $data_base . $dia_parametro;

        } else {
            
            $data_subtrair_ini = $data_base . $dia_parametro;
            $data_init = date('Ymd', strtotime('-1 month', strtotime($data_subtrair_ini)));

            if ($dia_parametro != 01) {
                $data_final = $data_base . '25';
            }

            if ($dia > $dia_parametro) {
                $data_meta = date('Ym', strtotime('+1 month', strtotime($data_base)));
                $data_init = date('Ymd', strtotime('+1 month', strtotime($data_init)));
                $data_final = date('Ymd', strtotime('+1 month', strtotime($data_final)));
                $ultimo_dia = cal_days_in_month(CAL_GREGORIAN, date('m'), date('Y')); // 31
                if ($data_base != $data_meta && $dia > $ultimo_dia) {
                    $data_meta = $data_base;
                }
            } else {

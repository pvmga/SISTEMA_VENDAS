            }

        }
//        echo json_encode(array('$data_init' => $data_init, '$data_final' => $data_final, '$data_meta' => $data_meta, '$dia' => $dia, '$dia_parametro' => $dia_parametro, '$dia > $dia_parametro' => $dia > $dia_parametro));
//        exit();

